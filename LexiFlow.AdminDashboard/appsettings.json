{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "LexiFlow": "Debug"
    }
  },
  "ApiClient": {
    "BaseUrl": "https://api.lexiflow.example.com",
    "TimeoutSeconds": 30,
    "UseAuthToken": true,
    "AuthTokenKey": "LexiFlow.AuthToken"
  },
  "ApiEndpoints": {
    "Dashboard": "api/admin/dashboard",
    "Users": "api/admin/users",
    "Roles": "api/admin/roles",
    "Activities": "api/admin/activities",
    "Settings": "api/admin/settings",
    "Database": "api/admin/database",
    "Logs": "api/admin/logs"
  },
  "ApiCache": {
    "EnableCaching": true,
    "DefaultCacheTimeMinutes": 5,
    "MaxCacheItems": 1000,
    "LogCacheOperations": true
  },
  "UI": {
    "Theme": "Light",
    "DefaultLanguage": "en-US",
    "PageSize": 20,
    "EnableAnimations": true,
    "AutoRefreshInterval": 60
  },
  "Features": {
    "EnableUserManagement": true,
    "EnableRoleManagement": true,
    "EnableSystemSettings": true,
    "EnableDatabaseTools": true,
    "EnableActivityMonitoring": true,
    "EnablePerformanceMonitoring": true,
    "EnableContentManagement": true
  }
}