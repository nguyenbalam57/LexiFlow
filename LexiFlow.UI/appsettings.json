{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=LexiFlow;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Api": {
    "BaseUrl": "https://lexiflow-api.azurewebsites.net/api/v1/",
    "Timeout": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/lexiflow.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 10
    }
  },
  "AppSettings": {
    "AppName": "LexiFlow",
    "AppVersion": "1.0.0",
    "DefaultLanguage": "en-US"
  }
}