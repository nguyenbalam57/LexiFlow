<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Login Screen -->
    <sys:String x:Key="Login_Header">Welcome Back</sys:String>
    <sys:String x:Key="Login_Welcome">Sign in to your account to continue your Japanese learning journey</sys:String>
    <sys:String x:Key="Login_Username">Username</sys:String>
    <sys:String x:Key="Login_Password">Password</sys:String>
    <sys:String x:Key="Login_Remember">Remember me</sys:String>
    <sys:String x:Key="Login_Forgot">Forgot password?</sys:String>
    <sys:String x:Key="Login_Button">Sign In</sys:String>
    <sys:String x:Key="Login_NoAccount">Don't have an account?</sys:String>
    <sys:String x:Key="Login_SignUp">Sign Up</sys:String>
    <sys:String x:Key="Language_Select">Language</sys:String>

    <!-- App Features -->
    <sys:String x:Key="App_Tagline">Your Intelligent Japanese Learning Assistant</sys:String>
    <sys:String x:Key="Feature_Learn_Title">Smart Learning</sys:String>
    <sys:String x:Key="Feature_Learn_Desc">Personalized lessons adapting to your pace and level</sys:String>
    <sys:String x:Key="Feature_Progress_Title">Track Progress</sys:String>
    <sys:String x:Key="Feature_Progress_Desc">Monitor your improvement with detailed statistics</sys:String>
    <sys:String x:Key="Feature_Vocab_Title">Extensive Vocabulary</sys:String>
    <sys:String x:Key="Feature_Vocab_Desc">Build your Japanese vocabulary with context and examples</sys:String>

    <!-- General -->
    <sys:String x:Key="App_Name">LexiFlow</sys:String>
    <sys:String x:Key="Button_Save">Save</sys:String>
    <sys:String x:Key="Button_Cancel">Cancel</sys:String>
    <sys:String x:Key="Button_OK">OK</sys:String>
    <sys:String x:Key="Button_Close">Close</sys:String>
    <sys:String x:Key="Loading">Loading...</sys:String>

    <!-- Messages -->
    <sys:String x:Key="Error_Generic">An error occurred. Please try again.</sys:String>
    <sys:String x:Key="Error_Connection">Cannot connect to the server. Please check your internet connection.</sys:String>
    <sys:String x:Key="Error_Login">Invalid username or password.</sys:String>
    <sys:String x:Key="Success_Generic">Operation completed successfully.</sys:String>
    
</ResourceDictionary>