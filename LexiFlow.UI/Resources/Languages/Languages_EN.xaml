<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Login Screen -->
    <sys:String x:Key="Login_Title">LexiFlow - Japanese Learning App</sys:String>
    <sys:String x:Key="Login_Header">Login to Your Account</sys:String>
    <sys:String x:Key="Login_Username">Username</sys:String>
    <sys:String x:Key="Login_Password">Password</sys:String>
    <sys:String x:Key="Login_RememberMe">Remember me</sys:String>
    <sys:String x:Key="Login_Button">Login</sys:String>
    <sys:String x:Key="Login_ForgotPassword">Forgot Password?</sys:String>
    <sys:String x:Key="Login_InvalidCredentials">Invalid username or password</sys:String>

    <!-- Language Selection -->
    <sys:String x:Key="Language_Vietnamese">Vietnamese</sys:String>
    <sys:String x:Key="Language_English">English</sys:String>
    <sys:String x:Key="Language_Japanese">Japanese</sys:String>
</ResourceDictionary>