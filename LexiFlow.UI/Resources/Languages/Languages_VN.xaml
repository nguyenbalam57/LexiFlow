<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Login Screen -->
    <sys:String x:Key="Login_Title">LexiFlow - Ứng dụng Học Tiếng Nhật</sys:String>
    <sys:String x:Key="Login_Header">Đăng Nhập Tài Khoản</sys:String>
    <sys:String x:Key="Login_Username">Tên đăng nhập</sys:String>
    <sys:String x:Key="Login_Password">Mật khẩu</sys:String>
    <sys:String x:Key="Login_RememberMe">Ghi nhớ đăng nhập</sys:String>
    <sys:String x:Key="Login_Button">Đăng Nhập</sys:String>
    <sys:String x:Key="Login_ForgotPassword">Quên mật khẩu?</sys:String>
    <sys:String x:Key="Login_InvalidCredentials">Tên đăng nhập hoặc mật khẩu không chính xác</sys:String>

    <!-- Language Selection -->
    <sys:String x:Key="Language_Vietnamese">Tiếng Việt</sys:String>
    <sys:String x:Key="Language_English">Tiếng Anh</sys:String>
    <sys:String x:Key="Language_Japanese">Tiếng Nhật</sys:String>
</ResourceDictionary>