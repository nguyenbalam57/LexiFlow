<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Login Screen -->
    <sys:String x:Key="Login_Header">Chào Mừng Trở Lại</sys:String>
    <sys:String x:Key="Login_Welcome">Đăng nhập vào tài khoản của bạn để tiếp tục hành trình học tiếng Nhật</sys:String>
    <sys:String x:Key="Login_Username">Tên đăng nhập</sys:String>
    <sys:String x:Key="Login_Password">Mật khẩu</sys:String>
    <sys:String x:Key="Login_Remember">Ghi nhớ đăng nhập</sys:String>
    <sys:String x:Key="Login_Forgot">Quên mật khẩu?</sys:String>
    <sys:String x:Key="Login_Button">Đăng Nhập</sys:String>
    <sys:String x:Key="Login_NoAccount">Chưa có tài khoản?</sys:String>
    <sys:String x:Key="Login_SignUp">Đăng Ký</sys:String>
    <sys:String x:Key="Language_Select">Ngôn ngữ</sys:String>

    <!-- App Features -->
    <sys:String x:Key="App_Tagline">Trợ Lý Học Tiếng Nhật Thông Minh Của Bạn</sys:String>
    <sys:String x:Key="Feature_Learn_Title">Học Thông Minh</sys:String>
    <sys:String x:Key="Feature_Learn_Desc">Bài học cá nhân hóa thích ứng với tốc độ và trình độ của bạn</sys:String>
    <sys:String x:Key="Feature_Progress_Title">Theo Dõi Tiến Độ</sys:String>
    <sys:String x:Key="Feature_Progress_Desc">Giám sát sự tiến bộ của bạn với thống kê chi tiết</sys:String>
    <sys:String x:Key="Feature_Vocab_Title">Từ Vựng Phong Phú</sys:String>
    <sys:String x:Key="Feature_Vocab_Desc">Xây dựng vốn từ tiếng Nhật của bạn với ngữ cảnh và ví dụ</sys:String>

    <!-- General -->
    <sys:String x:Key="App_Name">LexiFlow</sys:String>
    <sys:String x:Key="Button_Save">Lưu</sys:String>
    <sys:String x:Key="Button_Cancel">Hủy</sys:String>
    <sys:String x:Key="Button_OK">OK</sys:String>
    <sys:String x:Key="Button_Close">Đóng</sys:String>
    <sys:String x:Key="Loading">Đang tải...</sys:String>

    <!-- Messages -->
    <sys:String x:Key="Error_Generic">Đã xảy ra lỗi. Vui lòng thử lại.</sys:String>
    <sys:String x:Key="Error_Connection">Không thể kết nối đến máy chủ. Vui lòng kiểm tra kết nối internet của bạn.</sys:String>
    <sys:String x:Key="Error_Login">Tên đăng nhập hoặc mật khẩu không đúng.</sys:String>
    <sys:String x:Key="Success_Generic">Thao tác đã hoàn tất thành công.</sys:String>
    
</ResourceDictionary>