<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Login Screen -->
    <sys:String x:Key="Login_Header">おかえりなさい</sys:String>
    <sys:String x:Key="Login_Welcome">日本語学習の旅を続けるためにアカウントにサインインしてください</sys:String>
    <sys:String x:Key="Login_Username">ユーザー名</sys:String>
    <sys:String x:Key="Login_Password">パスワード</sys:String>
    <sys:String x:Key="Login_Remember">ログイン情報を保存</sys:String>
    <sys:String x:Key="Login_Forgot">パスワードをお忘れですか？</sys:String>
    <sys:String x:Key="Login_Button">ログイン</sys:String>
    <sys:String x:Key="Login_NoAccount">アカウントをお持ちでないですか？</sys:String>
    <sys:String x:Key="Login_SignUp">登録する</sys:String>
    <sys:String x:Key="Language_Select">言語</sys:String>

    <!-- App Features -->
    <sys:String x:Key="App_Tagline">あなたのインテリジェントな日本語学習アシスタント</sys:String>
    <sys:String x:Key="Feature_Learn_Title">スマート学習</sys:String>
    <sys:String x:Key="Feature_Learn_Desc">あなたのペースとレベルに適応するパーソナライズされたレッスン</sys:String>
    <sys:String x:Key="Feature_Progress_Title">進捗管理</sys:String>
    <sys:String x:Key="Feature_Progress_Desc">詳細な統計で学習の向上を確認できます</sys:String>
    <sys:String x:Key="Feature_Vocab_Title">豊富な語彙</sys:String>
    <sys:String x:Key="Feature_Vocab_Desc">コンテキストと例文で日本語の語彙を構築</sys:String>

    <!-- General -->
    <sys:String x:Key="App_Name">LexiFlow</sys:String>
    <sys:String x:Key="Button_Save">保存</sys:String>
    <sys:String x:Key="Button_Cancel">キャンセル</sys:String>
    <sys:String x:Key="Button_OK">OK</sys:String>
    <sys:String x:Key="Button_Close">閉じる</sys:String>
    <sys:String x:Key="Loading">読み込み中...</sys:String>

    <!-- Messages -->
    <sys:String x:Key="Error_Generic">エラーが発生しました。もう一度お試しください。</sys:String>
    <sys:String x:Key="Error_Connection">サーバーに接続できません。インターネット接続を確認してください。</sys:String>
    <sys:String x:Key="Error_Login">ユーザー名またはパスワードが無効です。</sys:String>
    <sys:String x:Key="Success_Generic">操作が正常に完了しました。</sys:String>
    
</ResourceDictionary>