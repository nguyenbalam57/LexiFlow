<Window x:Class="LexiFlow.UI.Views.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexiFlow.UI.Views.Login"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:LexiFlow.UI.Converters"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="{DynamicResource Login_Title}" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4338ca" Offset="0"/>
            <GradientStop Color="#8b5cf6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f8fafc" Offset="0"/>
            <GradientStop Color="#e2e8f0" Offset="1"/>
        </LinearGradientBrush>

        <!-- Language Button Style -->
        <Style x:Key="LanguageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True" 
                                CornerRadius="17">
                            <ContentPresenter x:Name="contentPresenter" 
                                            ContentTemplate="{TemplateBinding ContentTemplate}" 
                                            Content="{TemplateBinding Content}" 
                                            ContentStringFormat="{TemplateBinding ContentStringFormat}" 
                                            Focusable="False" 
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            Margin="{TemplateBinding Padding}" 
                                            RecognizesAccessKey="True" 
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="White"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="#4338ca"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#f1f5f9"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#cbd5e1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Login Card Style -->
        <Style x:Key="LoginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>

        <!-- Password Field Style -->
        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>

        <!-- Login Button Style -->
        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Branding Area -->
        <Grid Grid.Column="0" Background="{StaticResource PrimaryGradient}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Language Selection -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       Margin="0,30,30,0">
                <Button x:Name="btnVN" Style="{StaticResource LanguageButtonStyle}" 
                        Command="{Binding ChangeLanguageCommand}" CommandParameter="VN"
                        ToolTip="{DynamicResource Language_Vietnamese}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🇻🇳" FontSize="14" Margin="0,0,3,0"/>
                        <TextBlock Text="VN" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnEN" Style="{StaticResource LanguageButtonStyle}" 
                        Command="{Binding ChangeLanguageCommand}" CommandParameter="EN"
                        ToolTip="{DynamicResource Language_English}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🇺🇸" FontSize="14" Margin="0,0,3,0"/>
                        <TextBlock Text="EN" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnJP" Style="{StaticResource LanguageButtonStyle}" 
                        Command="{Binding ChangeLanguageCommand}" CommandParameter="JP"
                        ToolTip="{DynamicResource Language_Japanese}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🇯🇵" FontSize="14" Margin="0,0,3,0"/>
                        <TextBlock Text="JP" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Brand Section -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
                <!-- App Logo -->
                <Border Background="White" CornerRadius="30" Width="120" Height="120" Margin="0,0,0,30"
                        HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="BookOpenVariant" Width="60" Height="60" 
                                           Foreground="{StaticResource PrimaryGradient}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- App Name -->
                <TextBlock Text="LexiFlow" FontSize="48" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Tagline -->
                <TextBlock Text="日本語を学ぼう" FontSize="24" 
                          Foreground="White" Opacity="0.9" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Subtitle -->
                <TextBlock Text="{DynamicResource Login_Subtitle}" FontSize="16" 
                          Foreground="White" Opacity="0.8" HorizontalAlignment="Center" 
                          TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300"/>

                <!-- Features -->
                <StackPanel Orientation="Vertical" Margin="0,40,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                        <materialDesign:PackIcon Kind="Check" Foreground="White" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Feature_Vocabulary}" Foreground="White" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                        <materialDesign:PackIcon Kind="Check" Foreground="White" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Feature_JLPT}" Foreground="White" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                        <materialDesign:PackIcon Kind="Check" Foreground="White" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Feature_Progress}" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Margin="30,0,30,30">
                <TextBlock Text="© 2025 LexiFlow. All rights reserved." 
                          Foreground="White" Opacity="0.7" FontSize="12" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Version 1.0.0" 
                          Foreground="White" Opacity="0.6" FontSize="10" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Margin="40">
            <!-- Login Card -->
            <Border Style="{StaticResource LoginCardStyle}" VerticalAlignment="Center" MaxWidth="400">
                <StackPanel>
                    <!-- Login Header -->
                    <TextBlock Text="{DynamicResource Login_Header}" 
                              FontSize="28" FontWeight="Bold" 
                              Foreground="#1e293b"
                              HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Welcome Message -->
                    <TextBlock Text="{DynamicResource Login_Welcome}" 
                              FontSize="16" Foreground="#64748b"
                              HorizontalAlignment="Center" Margin="0,0,0,30"
                              TextWrapping="Wrap" TextAlignment="Center"/>

                    <!-- Username Field -->
                    <TextBox Style="{StaticResource InputFieldStyle}"
                             materialDesign:HintAssist.Hint="{DynamicResource Login_Username}"
                             materialDesign:HintAssist.FloatingScale="0.75"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Password Field -->
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordFieldStyle}"
                                 materialDesign:HintAssist.Hint="{DynamicResource Login_Password}"
                                 materialDesign:HintAssist.FloatingScale="0.75"
                                 PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                        </PasswordBox.InputBindings>
                    </PasswordBox>

                    <!-- Remember Me and Forgot Password -->
                    <Grid Margin="0,10,0,20">
                        <CheckBox Content="{DynamicResource Login_RememberMe}" 
                                 IsChecked="{Binding RememberMe}"
                                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <Button Content="{DynamicResource Login_ForgotPassword}"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Foreground="#8b5cf6" FontSize="12"
                               HorizontalAlignment="Right" VerticalAlignment="Center"
                               Command="{Binding ForgotPasswordCommand}"/>
                    </Grid>

                    <!-- Error Message -->
                    <Border Background="#fee2e2" BorderBrush="#fca5a5" BorderThickness="1" 
                           CornerRadius="8" Padding="15" Margin="0,10,0,10"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" Foreground="#dc2626" 
                                                   Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding ErrorMessage}" Foreground="#dc2626" 
                                      FontSize="14" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Success Message -->
                    <Border Background="#dcfce7" BorderBrush="#86efac" BorderThickness="1" 
                           CornerRadius="8" Padding="15" Margin="0,10,0,10"
                           Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Foreground="#16a34a" 
                                                   Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding SuccessMessage}" Foreground="#16a34a" 
                                      FontSize="14" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Login Button -->
                    <Button Style="{StaticResource LoginButtonStyle}"
                           Command="{Binding LoginCommand}"
                           IsEnabled="{Binding IsNotLoading}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Login" Width="20" Height="20" 
                                                       Margin="0,0,10,0" VerticalAlignment="Center"
                                                       Visibility="{Binding IsNotLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                           Value="0" IsIndeterminate="True" Width="20" Height="20" 
                                           Margin="0,0,10,0" Foreground="White"
                                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{DynamicResource Login_Button}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Additional Options -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="{DynamicResource Login_NoAccount}" Foreground="#64748b" 
                                  VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Button Content="{DynamicResource Login_Register}" 
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Foreground="#8b5cf6" FontWeight="Bold"
                               Command="{Binding RegisterCommand}"/>
                    </StackPanel>

                    <!-- Demo Accounts Info -->
                    <Border Background="#f8fafc" BorderBrush="#e2e8f0" BorderThickness="1" 
                           CornerRadius="8" Padding="15" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Login_DemoAccounts}" 
                                      FontWeight="Bold" FontSize="12" Foreground="#475569" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Admin Account -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{DynamicResource Login_AdminAccount}" 
                                              FontWeight="Bold" FontSize="11" Foreground="#374151"/>
                                    <TextBlock Text="admin / Admin@123" FontSize="10" Foreground="#6b7280"/>
                                </StackPanel>

                                <!-- User Account -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{DynamicResource Login_UserAccount}" 
                                              FontWeight="Bold" FontSize="11" Foreground="#374151"/>
                                    <TextBlock Text="student / Student@123" FontSize="10" Foreground="#6b7280"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Width="200" Height="100" 
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                               Value="0" IsIndeterminate="True" Width="40" Height="40" Margin="0,0,0,15"/>
                    <TextBlock Text="{DynamicResource Login_Authenticating}" 
                              HorizontalAlignment="Center" FontSize="14" Foreground="#64748b"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>